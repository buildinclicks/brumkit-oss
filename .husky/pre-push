#!/bin/sh

# Pre-push hook
# Run comprehensive checks before pushing to remote

echo "ğŸ” Running pre-push checks..."

# Run linting
echo "ğŸ“ Checking code style..."
pnpm lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix errors before pushing."
  exit 1
fi

# Run type checking
echo "ğŸ” Type checking..."
pnpm type-check
if [ $? -ne 0 ]; then
  echo "âŒ Type check failed. Please fix type errors before pushing."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
pnpm test
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix failing tests before pushing."
  exit 1
fi

echo "âœ… All pre-push checks passed!"

